<%- include('partials/header.ejs') %>
<body>
	<div class="container" id="form-login">    
    <img src="/img/lampada-engrenagem.jpg" id="fundo-login">
		<div class="card" id="login-card">
			<div class="card-header">
				<h3 class="text-center">Login de Usuário</h3>
			</div>
			<div class="card-body">
				<form class="needs-validation" onsubmit="event.preventDefault();">
					<label>Usuário</label>:</label>
					<input id="iptUser" type="text" placeholder="USER" class="form-control" name="user" required>
					<br>
					<label>Senha:</label>
					<input id="iptPass" type="password" placeholder="PASSWORD" class="form-control" name="pass" required>
					<br>
          <div class="d-grid gap-2">
					  <button class="btn btn-dark" id="btnLogin" onclick="tryLogin()">Login</button>
          </div>
				</form>
			</div>
		</div>		
	</div>
  <script type="text/javascript" src="/js/login.js"></script>
</body>
