<%- include('partials/header.ejs') %>
<body>
	<div class="container" id="form-login">    
    <img src="/img/lampada-engrenagem.jpg" id="fundo-login">
		<div class="card" id="login-card">
			<div class="card-header">
				<h3 class="text-center">Login de Usuário</h3>
			</div>
			<div class="card-body">
				<form class="" method="POST" action="/user/login">
					<label>Usuário</label>:</label>
					<input id="iptUser" type="text" placeholder="USER" class="form-control" name="user" required>
					<br>
					<label>Senha:</label>
					<input id="iptPass" type="password" placeholder="PASSWORD" class="form-control" name="pass" required >
					<br>
          <div class="d-grid gap-2">
					  <!-- <button class="btn btn-dark" id="btnLogin" onclick="await tryLogin()">Login</button> -->
						<button class="btn btn-dark" id="btnLogin" type="submit">Login</button>
          </div>
				</form>
			</div>
		</div>		
	</div>
	<%-include('partials/libs.ejs') %> <!--arquivo de import de libs genéricas-->
  <script type="text/javascript" src="/js/login.js"></script>	
</body>
<script>
	if ('<%=message%>' != ""){
		Swal.fire({
			icon: 'error',
			title: 'ERRO!',
			text: '<%=message%>'
		})
	}

</script>
