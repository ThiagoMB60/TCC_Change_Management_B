  <!-- MODAL DE MÓDULOS ↑-->

  <!-- MODAL DE VERSÕES DO MÓDULO -->

  <div class="modal fade " id="modalVersion" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="">Cadastro de Versão</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input id="iptVersionId" type="text" class="form-control my-2" placeholder="ID" disabled>
          <input id="iptVersionNumber" type="text" class="form-control my-2" placeholder="Número da Versão" required>
          <input id="iptVersionDate" type="date" class="form-control my-2" placeholder="Número da Versão" required>
          <select id="slVersionModule" class="form-control" required>
            <% modules.forEach(module => { %>
            <option><%=module.module%></option>
            <% }); %>
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" id="btnVersionCancel" class="btn btn-secondary"
            data-bs-dismiss="modal">Cancelar</button>
          <button type="submit" id="btnVersionSave" class="btn btn-primary">Salvar</button>
        </div>
      </div>
    </div>
  </div>
  <!-- MODAL DE VERSÕES DO MÓDULO -->

  <!-- MODAL DE INFORMAÇÕES DA VERSÃO DO MÓDULO -->

