        </div>
        <!-- card VERSIOS ↑↑ -->

        <!-- card CHANGES ↓↓ -->
        <div id="cardChanges" class="tab-pane fade" role="tabpanel" aria-labelledby="cardChanges" tabindex="0">
          <div class="card mb-3 tab-content">
            <div class="card-header">Cadastros</div>
            <div class="card-body text-dark">
              <div class="d-flex justify-content-between">
                <h5 class="card-title flex-fill" id="titleCardVersions">Alterações</h5>
                <a href='#' id='btnBackToVersions' class='btn btn-default btn-primary 	btn-circle'><i
                    class="fa-solid fa-arrow-left"></i></a>
